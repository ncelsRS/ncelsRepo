@{
    Layout = "../Shared/_Layout.cshtml";
}
@model PW.Ncels.Models.ContractListViewModel

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Все</h2>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Index", "Home")">Домашняя страница</a>
            </li>
            <li>
                <a>Договоры</a>
            </li>
            <li class="active">
                <a href="@Model.ListUrl">@Model.BreadcumbPath</a>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight" ng-controller="@Model.NgController">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>
                        @Model.GridCaption
                    </h5>
                    <div ibox-tools></div>
                </div>
                <div class="ibox-content ibox-heading">
                    <div class="note-font btn-group">
                        <input type="hidden" ng-model="listAction" ng-init="listAction='@Model.ListAction'"/>
                        <button class="btn btn-default btn-sm" type="button" onclick="location.href = '@Url.Action("Contract", "Contract", new {listAction = Model.ListAction})'"><i class="fa fa-file-text-o"></i> Создать новый договор</button>
                        <button class="btn btn-default btn-sm" type="button" onclick="location.href = '@Url.Action("ContractAddition", "Contract", new {listAction = Model.ListAction})'"><i class="fa fa-files-o"></i> Создать дополнительное соглашение</button>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="row">
                        <div class="col-lg-12">
                            <grid-object url="@Model.GridUrl" column-order="1"></grid-object>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>