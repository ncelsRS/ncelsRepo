@model PW.Ncels.Models.LetterModelFromEdo
@{
    ViewBag.Title = "Home Page";
    Layout = null;
}
@using (Html.BeginForm("DeleteIncoming", "LetterWithEdo", FormMethod.Post, new { }))
{
    <div class="form-horizontal">
        @Html.HiddenFor(model => model.ID)
        <div class="row">
            <div class="col-lg-12">
                <div>
                    <h2 style="text-align:center;">Вы действительно хотите удалить письмо?</h2>
                </div>
            </div>
        </div>
        <hr>
        <div class="form-group">
            <div class="col-md-offset-3 col-md-3">
                <button type="submit" class="btn btn-primary" style="width:100%;">Удалить</button>
            </div>
            <div class="col-md-3">
                <button type="button" class="btn btn-default" data-dismiss="modal" style="width:100%;">Закрыть</button>
                </div>
            </div>
    </div>
}
