@using PW.Ncels.Database.Recources
<div id="main_warning" class="modal fade" style="padding-top: 100px">
    <div class="modal-dialog size75p">
        <div class="modal-content alert-warning">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title"> <span class=" glyphicon glyphicon-exclamation-sign"></span> @ResourceSetting.Warning</h4>
            </div>
            <div class="modal-body">
            </div>
        </div>
    </div>
</div>
<div id="main_alert" class="modal fade" style="padding-top: 100px">
    <div class="modal-dialog">
        <div class="modal-content"> @*alert-info*@
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title"><span class="glyphicon glyphicon-exclamation-sign"></span> <span id="title-text"></span></h4>
            </div>
            <div class="modal-body center">
            </div>
            <div class="modal-footer center">
                <button type="button" data-dismiss="modal" style="width: 80px;">Ok</button>
            </div>
        </div>
    </div>
</div>
<div id="main_confirmation" class="modal fade" style="padding-top: 100px">
    <div class="modal-dialog size75p">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title"><span class="glyphicon glyphicon-exclamation-sign"></span> @ResourceSetting.Warning</h4>
            </div>
            <div class="modal-body">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal" id="confirmCancel">@ResourceSetting.Cancel</button>
                <button type="button" class="btn btn-primary" data-dismiss="modal">Ok</button>
            </div>
        </div>
    </div>
</div>
<div id="main_view" class="modal fade" style="padding-top: 20px;">
    <div class="modal-dialog" style="width: 900px !important;">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Просмотр</h4>
            </div>
            <div class="modal-body">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal" id="confirmCancelView">Закрыть</button>
            </div>
        </div>
    </div>
</div>
<script src="@Url.Content("~/Scripts/js/custom/message-dialog-box.js")" type="text/javascript"> </script>