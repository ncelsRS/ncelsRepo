@Html.Partial("~/Views/Home/MessageDialogBox.cshtml")
<script src="~/Scripts/js/custom/message-dialog-box.js"></script>
<script>
    function removePrice(btn) {
        var success = function () {
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("Delete", "Price")',
                    data: { 'id': $(btn).attr('modelId') },
                    dataType: 'json',
                    cache: false,
                    success: function (data) {
                        var row = $(btn).closest('tr');
                        row.remove();
                    },
                    error: function (data) {
                        alert("1Error" + data);
                    }
                });

        }
        var cancel = function () {
        };
        showConfirmation("Сохранить", "Вы уверены, что хотите удалить?", success, cancel);
    }

</script>