                                <li><a href="@Url.Action("PriceImnModifyList", "Project")">Заявление на внесения изменений в зарегистрированную цену на ИМН</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="row">
                        <div class="col-lg-12">
                            <grid-object url="/Project/ReadPrices?type=0" column-order="1"></grid-object>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@Html.Partial("~/Views/Project/ActionPriceView.cshtml")