            $('#listView_AvgOptFileData' + "@Model.Id").data("kendoListView").dataSource.read();
            $('#listView_AvgOptFileData' + "@Model.Id").data("kendoListView").refresh();
        },
        select: function (e) { },
        template: kendo.template($('#fileTemplate111').html())
    });

</script>

