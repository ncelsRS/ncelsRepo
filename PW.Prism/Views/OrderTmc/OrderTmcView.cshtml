                    url: '@Url.Action("GetDictionaryListByCode", "Dictionaries")',
                    data: { code: '@Dictionary.MeasureType.DicCode' }
                }
            }
        }
    });

    $("#OwnerEmployeeId").kendoDropDownList({
        dataTextField: "Name",
        dataValueField: "Id",
        //enable: false,
        dataSource: {
