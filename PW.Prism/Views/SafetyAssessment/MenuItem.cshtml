<div id="MainMenu" style="font-size: 14px; ">
    <div class="list-group panel">
        <a href="#" onclick="showDeclaration(event)" class="list-group-item"><span class="glyphicon glyphicon-file"></span> Заявление</a>
        <a href="#" onclick="showAttachFile(event)" class="list-group-item"><span class="glyphicon glyphicon-folder-open"></span> Перечень документов</a>

        @{if (Model.OBK_AssessmentDeclaration.KfSelection == true)
            {
                <a href="#" onclick="showActReception(event)" class="list-group-item"><span class="glyphicon glyphicon-folder-open"></span> Акт отбора</a>
            }
        }

        @{if (Model.OBK_AssessmentDeclaration.GDPItself == true)
            {
                <a href="#" onclick="showActReception(event)" class="list-group-item"><span class="glyphicon glyphicon-folder-open"></span> Акт приема-передачи</a>
            }
        }

        @{if (Model.StageId == CodeConstManager.STAGE_OBK_EXPERTISE_DOC)
            {
                if (Model.OBK_AssessmentDeclaration.ApplicantAgreement == true)
                {
                    <a href="#" onclick="showActReception(event)" class="list-group-item"><span class="glyphicon glyphicon-folder-open"></span> Акт отбора</a>
                }
            }
        }
        @*@{ if (Model.OBK_AssessmentDeclaration.GDPItself != true && Model.OBK_AssessmentDeclaration.KfSelection != true)
                {
                    <a href="#" onclick="showActReception(event)" class="list-group-item"><span class="glyphicon glyphicon-folder-open"></span> Акт отбора</a>
                }
            }*@
        @if (Model.StageId == CodeConstManager.STAGE_OBK_EXPERTISE_DOC)
        {
            @*<a href="#" onclick="showExpDoc(event)" class="list-group-item"><span class="glyphicon glyphicon-star-empty"></span>Экспертиза документов</a>*@
            if (Model.OBK_AssessmentDeclaration.OBK_Ref_Type.Code != CodeConstManager.OBK_SA_PARTY)
            {
                <a href="#" onclick="showExpDocument(event)" class="list-group-item"><span class="glyphicon glyphicon-star-empty"></span>Экспертиза документов</a>
            }
            if (Model.OBK_AssessmentDeclaration.OBK_Ref_Type.Code == CodeConstManager.OBK_SA_PARTY)
            {
                <a href="#" onclick="showPartyExpDocument(event)" class="list-group-item"><span class="glyphicon glyphicon-star-empty"></span>Экспертиза документов</a>
            }
            if (Model.OBK_AssessmentDeclaration.OBK_Ref_Type.Code == CodeConstManager.OBK_SA_DECLARATION)
            {
                <a href="#" onclick="showExpDocDeclarationResponse(event)" class="list-group-item"><span class="glyphicon glyphicon-star-empty"></span>Экспертиза документов результат</a>
            }
            if (Model.OBK_AssessmentDeclaration.OBK_Ref_Type.Code != CodeConstManager.OBK_SA_DECLARATION && (Model.OBK_Ref_StageStatus.Code == OBK_Ref_StageStatus.RequiresConclusion || Model.OBK_Ref_StageStatus.Code == OBK_Ref_StageStatus.RequiresSigning || Model.OBK_Ref_StageStatus.Code == OBK_Ref_StageStatus.Completed))
            {
                <a href="#" onclick="showExpertiseConclusion(event)" class="list-group-item"><span class="glyphicon glyphicon-star-empty"></span>Экспертиза документов результат*</a>
            }
            if (Model.OBK_AssessmentDeclaration.OBK_Ref_Type.Code != CodeConstManager.OBK_SA_DECLARATION)
            {
                <a href="#" onclick="showTask(event)" class="list-group-item"><span class="glyphicon glyphicon-star-empty"></span> Задание на испытание</a>
            }

            if (Model.OBK_AssessmentDeclaration.OBK_Ref_Type.Code == CodeConstManager.OBK_SA_SERIAL)
            {
                <a id="menuItemSelectCommissionOP" style="display: none" href="#" onclick="showSelectCommissionOP(event)" class="list-group-item">
                    <span class="glyphicon glyphicon-star-empty"></span>Комиссия СОП</a>
            }
        }

        @if (Model.StageId == CodeConstManager.STAGE_OBK_PIMS)
        {
            <a href="#" onclick="showOPDocumentList(event)" class="list-group-item"><span class="glyphicon glyphicon-star-empty"></span>Оценка производства</a>
        }

        @if (Model.StageId != CodeConstManager.STAGE_OBK_COZ && Model.OBK_AssessmentDeclaration.OBK_Ref_Type.Code != CodeConstManager.OBK_SA_DECLARATION)
        {
            <a href="#" onclick="showMaterial(event)" class="list-group-item"><span class="glyphicon glyphicon-briefcase"></span> Образцы</a>
        }
        <a href="#" onclick="showDeclarationSteps(event)" class="list-group-item"><span class="glyphicon glyphicon-ok-circle"></span> Этапы заявления</a>
        <a href="#" onclick="showHistoryStage(event)" class="list-group-item"><span class="glyphicon glyphicon-off"></span> Заключения этапов</a>
    </div>
</div>