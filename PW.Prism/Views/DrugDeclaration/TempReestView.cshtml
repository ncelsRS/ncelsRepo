@model PW.Ncels.Database.DataModel.EXP_DrugDosage
@{
    var idReestrRegDate = "ReestrRegDate_" + Model.Id;
    var idNumberNd = "NumberNd_" + Model.Id;
    var idReestrExpirationDate = "ReestrExpirationDate_" + Model.Id;
    var idRegisterId = "RegisterId_" + Model.Id;
}
<div class="alert alert-warning reestr-drug-change" role="alert">

    <div class="row">
        <div class="col-sm-8">
            <div class="form-group">
                <label for="name" class="col-lg-4">№ регистрационного удостоверения:</label>
                <div class="col-lg-8">
                    <div class="input-group">
                        @Html.TextBoxFor(model => model.ReestrNumber, new { @class = "form-control edit-control main-control", @readonly = "readonly", id = @idRegisterId })
                        <span class="input-group-addon">
                            <a class="commentDialog" href="#">
                                <i class="glyphicon glyphicon-info-sign"></i>
                            </a>
                        </span>
                    </div>
                </div>

            </div>
        </div>
        <div class="col-sm-4">
            <div class="form-group">
                <label for="name" class="col-lg-4">Дата регистрации:</label>
                <div class="col-lg-8">
                    <div class="input-group">
                        @Html.TextBoxFor(model => model.ReestrRegDate, new { @class = "form-control edit-control main-control", @readonly = "readonly", id = @idReestrRegDate })
                        <span class="input-group-addon">
                            <a class="commentDialog" href="#">
                                <i class="glyphicon glyphicon-info-sign"></i>
                            </a>
                        </span>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-8">
            <div class="form-group">
                <label for="name" class="col-lg-4">№ НД (Нормативная документация):</label>
                <div class="col-lg-8">
                    <div class="input-group">
                        @Html.TextBoxFor(model => model.NumberNd, new { @class = "form-control edit-control main-control", @readonly = "readonly", id = idNumberNd })
                        <span class="input-group-addon">
                            <a class="commentDialog" href="#">
                                <i class="glyphicon glyphicon-info-sign"></i>
                            </a>
                        </span>
                    </div>
                </div>
            </div>

        </div>
        <div class="col-sm-4">
            <div class="form-group">
                <label for="name" class="col-lg-4">Срок действия:</label>
                <div class="col-lg-8">
                    <div class="input-group">
                        @Html.TextBoxFor(model => model.ReestrExpirationDate, new { @class = "form-control edit-control main-control", @readonly = "readonly", id = idReestrExpirationDate })
                        <span class="input-group-addon">
                            <a class="commentDialog" href="#">
                                <i class="glyphicon glyphicon-info-sign"></i>
                            </a>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
