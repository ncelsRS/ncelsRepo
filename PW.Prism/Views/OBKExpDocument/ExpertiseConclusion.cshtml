    table.tableExpertConclusion tbody tr.selected:nth-child(even) {
        background-color:lightgoldenrodyellow !important;
    }
    table.tableExpertConclusion tbody tr.selected:nth-child(odd) {
        background-color:lightgoldenrodyellow !important;
    }
    table.tableExpertConclusion tbody tr.selected:hover {
        background-color:lightgoldenrodyellow !important;
    }
</style>*@

<div class="panel-body">
    <div class="panel panel-default">
        <div class="row">
            <div class="col-lg-12">
                <div class="pwToolbar">
                    <div class="btn-toolbar" role="toolbar">
                        <div class="btn-group">
                            <button type="button" id="ecSignBtn" class="btn btn-default">Завершить ОБК и подписать</button>
                        </div>
                    </div>
                </div>
                <br/>
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Информация о продукции
                    </div>
                    <div class="panel-body">
                        <div class="row" style="margin-bottom: 10px">
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <div class="col-lg-12">
                                        <table id="tableExpertConclusion" class="table table-striped table-bordered table-hover tableExpertConclusion">
                                            <thead>
                                            <tr>
                                                @*<td></td>*@
                                                <td>Наименование продукции</td>
                                                <td>Серия</td>
                                                <td>Результат</td>
                                                <td></td>
                                            </tr>
                                            </thead>
                                            <tbody>
                                            @foreach (var t in Model.ExpertiseConclusion)
                                            {
                                                <tr>
                                                    <td>@t.ProductNameRu</td>
                                                    <td><a onclick="getTasksDetails('@Model.AssessmentDeclarationId', '@t.ProductSeriesId')"><span style="color: rgb(66, 139, 202);">@t.ProductSeries</span></a></td>
                                                    <td>@t.ResearchCenterResultName</td>
                                                    <td>
                                                        @if (t.ResearchCenterResult != null)
                                                        {
                                                            if ((bool) t.ResearchCenterResult)
                                                            {
                                                                <button type="button" class="btn btn-default" disabled="@t.BtnValid" id="createPositiveResult_@t.ProductSeriesId" onclick="createResult(true, '@t.ProductSeriesId')">Заключение</button>
                                                                <button type="button" class="btn btn-default" onclick="showResult(true, '@t.ProductSeriesId')">Просмотр</button>
                                                                <button type="button" class="btn btn-default" id="showPdfPositiveResult_@t.ProductSeriesId" onclick="showPdfResult(true, '@t.ProductSeriesId')">Печатная форма</button>
                                                            }
                                                            else
                                                            {
                                                                <button type="button" class="btn btn-default" disabled="@t.BtnValid" id="createNegativeResult_@t.ProductSeriesId" onclick="createResult(false, '@t.ProductSeriesId')">Отказ</button>
                                                                <button type="button" class="btn btn-default" onclick="showResult(false, '@t.ProductSeriesId')">Просмотр</button>
                                                                <button type="button" class="btn btn-default" id="showPdfNegativeResult_@t.ProductSeriesId" onclick="showPdfResult(false, '@t.ProductSeriesId')">Печатная форма</button>
                                                            }
                                                        }
                                                    </td>
                                                </tr>
                                            }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div hidden="hidden" id="panelExpertiseConclusion_@Model.AssessmentDeclarationId">
                    <div id="expertiseConclusion_@Model.AssessmentDeclarationId"></div>
                </div>
            </div>
        </div>
        <div hidden="hidden" id="panelTaskDetails" class="modal fade">
            <div id="responseContent" class="modal-dialog modal-lg" style="width: 1100px !important;"></div>
        </div>
    </div>
</div>

<script>

    function getTasksDetails(adId, productSeriesId) {
        $.ajax({
            type: 'GET',
            url: '/OBKExpDocument/ShowModalTaskDetails',
            data: { assessmentDeclarationId: adId, productSeriesId: productSeriesId },
            cache: false,
            success: function (data) {
                debugger;
                $('#responseContent').html(data);
                $('#panelTaskDetails').modal('show');
            }
        });
    }

    function createResult(e, productSeriesId) {
        debugger;
        var url = null;
        if (e)
            url = '/OBKExpDocument/ExpertiseConclusionPositive?productSeriesId=' + productSeriesId + '&adId=' + '@Model.AssessmentDeclarationId';
        else
            url = '/OBKExpDocument/ExpertiseConclusionNegative?productSeriesId=' + productSeriesId + '&adId=' + '@Model.AssessmentDeclarationId';

        $.ajax({
            type: 'GET',
            url: url,
            cache: false,
            success: function (data) {
                debugger;
                $('#expertiseConclusion_@Model.AssessmentDeclarationId').html(data);
                $("#panelExpertiseConclusion_@Model.AssessmentDeclarationId").show();
            }
        });
    }

    function showResult(e, productSeriesId) {
        debugger;
        var url = null;
        if (e)
            url = '/OBKExpDocument/ShowExpertiseConclusionPositive?productSeriesId=' + productSeriesId + '&adId=' + '@Model.AssessmentDeclarationId';
        else
            url = '/OBKExpDocument/ShowExpertiseConclusionNegative?productSeriesId=' + productSeriesId + '&adId=' + '@Model.AssessmentDeclarationId';

        $.ajax({
            type: 'GET',
            url: url,
            cache: false,
            success: function (data) {
                debugger;
                $('#expertiseConclusion_@Model.AssessmentDeclarationId').html(data);
                $("#panelExpertiseConclusion_@Model.AssessmentDeclarationId").show();
            }
        });
    }


    $("#ecSignBtn").click(function () {
        var modelId = '@Model.AssessmentDeclarationId';
        $.ajax({
            type: 'GET',
            url: '/OBKExpDocument/GetSignExpDocument?id=' + modelId,
            success: function (result) {
                startSign(result.data, modelId, saveSignedPayment);
            }
        });
        function saveSignedPayment(signedData, id) {
            var data1 = {
                id: id,
                signedData: signedData
            };
            var json = JSON.stringify(data1);
            $.ajax({
                type: 'POST',
                url: '/OBKExpDocument/SaveSignedExpDocument',
                contentType: 'application/json; charset=utf-8',
                data: json,
                success: function (result) {
                    alert(result.message);
                }
            });
        }
    });

    function showPdfResult(e, productSeriesId) {
        if (e) {
            if (productSeriesId == null)
                alert("Выберите серию из таблицы");
            window.open('/OBKExpDocument/ExpDocumentExportFilePdf?productSeriesId=' +
                productSeriesId +
                '&id=' + '@Model.AssessmentDeclarationId');
        } else {
            if (productSeriesId == null)
                alert("Выберите серию из таблицы");
            window.open('/OBKExpDocument/ExpDocumentMotivRefusExportFilePdf?id=' + '@Model.AssessmentDeclarationId');
        }
    }

</script>
