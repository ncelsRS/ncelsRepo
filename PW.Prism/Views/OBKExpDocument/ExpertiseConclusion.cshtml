<div class="panel-body">
    <div class="panel panel-default">
        <div class="row">
            <div class="col-lg-12">
                <div class="pwToolbar">
                    <div class="btn-toolbar" role="toolbar">
                        <div class="btn-group">
                            <button type="button" class="btn btn-default">Завершить ОБК</button>
                        </div>
                    </div>
                </div>
                <br/>
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Информация о продукции
                    </div>
                    <div class="panel-body">
                        <div class="row" style="margin-bottom: 10px">
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <div class="col-lg-12">
                                        <table id="tableExpertConclusion" class="table table-striped table-bordered table-hover tableExpertConclusion">
                                            <thead>
                                            <tr>
                                                <td></td>
                                                <td>Наименование продукции</td>
                                                <td>Серия</td>
                                                <td>Результат</td>
                                                <td></td>
                                            </tr>
                                            </thead>
                                            <tbody>
                                            @foreach (var t in Model.ExpertiseConclusion)
                                            {
                                                <tr>
                                                    <td>@if (t.ResearchCenterResult != null)
                                                        {
                                                            if (!(bool) t.ResearchCenterResult)
                                                            {
                                                                <input type="checkbox"/>
                                                            }
                                                        }
                                                    </td>
                                                    <td>@t.ProductNameRu</td>
                                                    <td><a onclick="getTasksDetails('@Model.AssessmentDeclarationId', '@t.ProductSeriesId')"><span style="color:rgb(66,139,202);">@t.ProductSeries</span></a></td>
                                                    <td>@t.ResearchCenterResultName</td>
                                                    <td>
                                                        @if (t.ResearchCenterResult != null)
                                                        {
                                                            if ((bool)t.ResearchCenterResult)
                                                            {
                                                                <button type="button" class="btn btn-default" id="createPositiveResult_@t.ProductSeriesId" onclick="createResult(true, '@t.ProductSeriesId', false)">ЗБК</button>
                                                                <button type="button" class="btn btn-default" onclick="createResult(true,'@t.ProductSeriesId', true)">Просмотр</button>
                                                            }
                                                            else
                                                            {
                                                                <button type="button" class="btn btn-default" onclick="createResult(false, '@t.ProductSeriesId', false)">Отказ</button>
                                                                <button type="button" class="btn btn-default" onclick="createResult(false, '@t.ProductSeriesId', true)">Просмотр</button>
                                                            }
                                                        }
                                                        
                                                    </td>
                                                </tr>
                                            }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div hidden="hidden" id="panelExpertiseConclusion_@Model.AssessmentDeclarationId">
                    <div id="expertiseConclusion_@Model.AssessmentDeclarationId"></div>
                </div>
            </div>
        </div>
        <div hidden="hidden" id="panelTaskDetails" class="modal fade">
            <div id="responseContent" class="modal-dialog modal-lg" style="width: 1100px !important;"></div>
        </div>
    </div>
</div>

<script>

    function getTasksDetails(adId, productSeriesId) {
        $.ajax({
            type: 'GET',
            url: '/OBKExpDocument/ShowModalTaskDetails',
            data: { assessmentDeclarationId: adId, productSeriesId: productSeriesId },
            cache: false,
            success: function (data) {
                debugger;
                $('#responseContent').html(data);
                $('#panelTaskDetails').modal('show');
            }
        });
    }

    function createResult(e, productSeriesId, view) {
        debugger;
        var url = null;
        if (e)
            url = '/OBKExpDocument/ExpertiseConclusionPositive?productSeriesId=' + productSeriesId + '&adId=' + '@Model.AssessmentDeclarationId';
        else
            url = '/OBKExpDocument/ExpertiseConclusionNegative?productSeriesId=' + productSeriesId + '&adId=' + '@Model.AssessmentDeclarationId';

        $.ajax({
            type: 'GET',
            url: url,
            cache: false,
            success: function (data) {
                debugger;
                $('#expertiseConclusion_@Model.AssessmentDeclarationId').html(data);
                $("#panelExpertiseConclusion_@Model.AssessmentDeclarationId").show();
            }
        });
    }





