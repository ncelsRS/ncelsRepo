@model PW.Prism.ViewModels.OBK.TaskViewModel
<style>
    .modal-dialog {
        width: 1000px !important;
    }
</style>
<div class="pwPage pwPageEx" style="margin-left: 10px; margin-right: 60px; width: 90%">
    <div class="pwToolbar">
        <div class="btn-toolbar" role="toolbar">
            <div class="btn-group">
                <button type="button" class="btn btn-default" onclick="callCreatTaskView()"><span class="pwToolbarButtonReturn"></span><span class="pwToolbarButtonTitle">Создать задание</span></button>
            </div>
        </div>
    </div>
    <br />
    <div class="panel panel-default">
        <div class="panel-heading">
            Задание на испытание
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-sm-12">
                    <table class="table table-striped table-bordered table-hover dataTable">
                        <thead>
                        <tr>
                            <td>№ задания</td>
                            <td>Дата регистрации</td>
                            <td>Лаборатория</td>
                            <td>Создал</td>
                        </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="panel panel-default">
        <div class="panel-heading">
            Таблица распределения продукции
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-sm-12">
                    <table class="table table-striped table-bordered table-hover dataTable">
                        <thead>
                        <tr>
                            <td>Наименование продукции</td>
                            <td>Серия</td>
                            <td>№ задания</td>
                            <td>Лаборатория</td>
                        </tr>
                        </thead>
                        <tbody>
                        @for (var i = 0; i < Model.ProductViewModels.Count; i++)
                        {
                            <tr rowid="@Model.ProductViewModels[i].Id">
                                <td>@Model.ProductViewModels[i].ProductNameRu</td>
                                <td>@Model.ProductViewModels[i].ProductSeries</td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal" id="modalCreateTask">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="modal-dialog">

                    <!-- Modal content-->
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title">Создать задание на проведение испытаний</h4>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label>№ задания*</label>
                                        <input class="form-control" type="text" id="taskNumber" value="">
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label>Дата регистрации*</label>
                                        <input class="form-control date-control" type="text" id="createDate" value="">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <label>№ акта отбора*</label>
                                        <input class="form-control" type="text" id="actNumber" value="">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <label>Лаборатория*</label>
                                        <input class="form-control" type="text" id="lab" value="">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-12">
                                    <table class="table table-striped table-bordered table-hover dataTable">
                                        <thead>
                                        <tr>
                                            <td>Наименование продукции</td>
                                            <td>Серия</td>
                                            <td>№задания</td>
                                            <td>Лаборатория</td>
                                            <td></td>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        @for (var i = 0; i < Model.ProductViewModels.Count; i++)
                                        {
                                            <tr rowid="@Model.ProductViewModels[i].Id">
                                                <td>@Model.ProductViewModels[i].ProductNameRu</td>
                                                <td>@Model.ProductViewModels[i].ProductSeries</td>
                                                <td>@Model.ProductViewModels[i].ProductSeries</td>
                                                <td>@Model.ProductViewModels[i].ProductSeries</td>
                                                <td>
                                                    <i class="glyphicon glyphicon-remove deleteRow" title="Удалить"></i>
                                                </td>
                                            </tr>
                                           
                                        }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Сохранить</button>
                            <button type="button" class="btn btn-default" data-dismiss="modal">Закрыть</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    setDateFormat(".date-control");

    function callCreatTaskView() {
        debugger;
        $("#modalCreateTask").modal();
    }
</script>