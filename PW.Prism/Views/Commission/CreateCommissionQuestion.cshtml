@using PW.Prism.ViewModels.Commissions
@model CreateCommissionQuestionModel
@{

}
<div class="modal-dialog" style="width: 95%; max-width: 600px;">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">Добавление вопроса повестки протокола</h4>
        </div>
        <div class="modal-body" padding="0">
            <div class="row">
                <div class="col-md-12 col-sm-12">
                    <label>Номер</label>
                    <input type="text" id="createCommissionQuestionNumber" value="@Model.NextNumber" readonly="readonly" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 col-sm-12">
                    <label> Вид вопроса</label>
                    <select id="createCommissionQuestionType">
                        @foreach (var t in Model.TypeList)
                        {
                            //if (t.Value == Model.Kind.ToString())
                            //{
                            //    t.Selected = true;
                            //}
                            <option value="@t.Value">@t.Text</option>
                        }
                    </select>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 col-sm-12">
                    <label>Комментарий</label>
                    <textarea rows="10" cols="45" id="createCommissionQuestionComment" value="" />
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-primary" onclick="CreateCommissionQuestionConfirm('@Model.CommissionId')">Добавить</button>
            <button type="button" class="btn btn-default" data-dismiss="modal">Отмена</button>
        </div>
    </div>
</div>
