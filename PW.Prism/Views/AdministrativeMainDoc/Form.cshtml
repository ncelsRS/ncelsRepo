            <td></td>
            <td></td>
            <td></td>
        </tr>
        <tr>
            <td>
                <div style="position: relative;">
                    <span data-for="@("CreatedUserId" + Model[0])" class="k-invalid-msg"></span>
                </div>
                @PW.Ncels.Database.Recources.Messages.Property_Автор_355__00
            </td>
            <td colspan="4">
                <select name="@("CreatedUserId" + Model[0])" id="@("CreatedUserId" + Model[0])" data-bind="value: document.CreatedUserId, events: { change: change }" data-placeholder="@PW.Ncels.Database.Recources.Messages.Property_Выберитезначение_57__00" class="pwWidth100" required data-required-msg="@PW.Ncels.Database.Recources.Messages.Property_Автор_355__00" />
