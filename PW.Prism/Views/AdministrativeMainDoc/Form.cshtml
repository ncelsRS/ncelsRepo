            <td colspan="4">
                <textarea name="@("Summary"+ Model[0])" id="@("Summary"+ Model[0])" data-bind="value: document.Summary, events: { change: change }" class="pwWidth100 pwTextArea" required data-required-msg="@PW.Ncels.Database.Recources.Messages.Property_Краткоесодержание_69__00" />

            </td>
        </tr>
        <tr>
            <td>
                <div style="position: relative;">
                    <span data-for="@("SignerId" + Model[0])" class="k-invalid-msg"></span>
                </div>
                @PW.Ncels.Database.Recources.Messages.Property_Подписано_261__00
            </td>
            <td colspan="4">
                <select name="@("SignerId" + Model[0])" id="@("SignerId" + Model[0])" data-bind="value: document.SignerId, events: { change: change }" data-placeholder="@PW.Ncels.Database.Recources.Messages.Property_Выберитезначение_57__00" class="pwWidth100" required data-required-msg="@PW.Ncels.Database.Recources.Messages.Property_Подписано_261__00" />
            </td>
        </tr>
        <tr>
            <td>
                <div style="position: relative;">
                    <span data-for="@("AdministrativeTypeDictionaryId" + Model[0])" class="k-invalid-msg"></span>
                </div>
                @PW.Ncels.Database.Recources.Messages.Property_Виддеятельности_96__00
            </td>
            <td>
                <select name="@("AdministrativeTypeDictionaryId" + Model[0])" id="@("AdministrativeTypeDictionaryId" + Model[0])" data-bind="value: document.AdministrativeTypeDictionaryId, events: { change: change }" data-placeholder="@PW.Ncels.Database.Recources.Messages.Property_Выберитезначение_57__00" class="pwWidth100" required data-required-msg="@PW.Ncels.Database.Recources.Messages.Property_Виддеятельности_96__00" />
            </td>
            <td></td>
            <td>
                <div style="position: relative;">
