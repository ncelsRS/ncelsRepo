@using PW.Ncels.Database.Models
@model PW.Ncels.Database.DataModel.Task


    @(Html.Kendo().ListView<UploadInitialFile>()
                                    .Name("listViewEdit_" + Model.Id)
                                    .TagName("div").HtmlAttributes(new { @style = "height:235px; border:0;overflow: auto;width: 838px;" })
                                            .ClientTemplateId("fileEditTemplate")
                                            .DataSource(dataSource => dataSource.Read(read => read.Action("FileRead", "Upload", new { taskId = Model.Id })))
        )

  
