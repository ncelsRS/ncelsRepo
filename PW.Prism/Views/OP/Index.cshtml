    function sendToUOBK() {
        $.ajax({
            type: "POST",
            url: '@Url.Action("SendToUOBK")',
            data: {
                declarationId: '@Model'
            },
            dataType: 'json',
            cache: false,
            success: function (data) {
                alert('Заявка отправлена в УОБиК');
            },
            error: function (err) {
                alert("Ошибка: " + err.message);
            }
        });
