@model Guid
<script>
    function sendToUOBK() {
        $.ajax({
            type: "POST",
            url: '@Url.Action("SendToUOBK")',
            data: {
                declarationId: '@Model'
            },
            dataType: 'json',
            cache: false,
            success: function (data) {
                alert('Заявка отправлена в УОБиК');
            },
            error: function (err) {
                alert("Ошибка: " + err.message);
            }
        });
    }

    function programView() {
        $.ajax({
            url: "/OP/ProgramView",
            type: "GET",
            data: { declarationId: "@(Model)" },
            success: function (res) {
                $("#attachOPDocumentView@(Model)").html(result);
            },
            error: function (err) {
                alert("Произошла ошибка: " + err);
            }
        })
        $('#programView@(Model)').show();
    }
</script>
