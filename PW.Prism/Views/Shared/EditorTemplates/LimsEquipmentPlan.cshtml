@using PW.Ncels.Database.DataModel
@model LimsEquipmentPlan

<table style="width: 100%">
    <tr style="vertical-align: top;">
        <td style="vertical-align: top;">
            <fieldset>
                <legend></legend>
                <dl class="pwEditRef">
                        
                    <dt>
                        @Html.DisplayNameFor(model => model.PlanTypeId)
                    </dt>
                    <dd>
                        @(Html.Kendo().ComboBoxFor(p => p.PlanTypeId).ValuePrimitive(true).DataValueField("Id").DataTextField("Name")
                            .DataSource(source => source.Read("GetDictionaryListByCode", "Dictionaries", new { code = Dictionary.DicEquipmentPlanType.DicCode })))
                    </dd>
                    <br />
                        
                    <dt>
                        @Html.DisplayNameFor(model => model.Year)
                    </dt>
                    <dd>
                        @Html.Kendo().NumericTextBoxFor(model => model.Year).Min(0).Decimals(0).Format("0")
                    </dd>
                    <br />
                    
                    <dt>
                        @Html.DisplayNameFor(model => model.HeadOfOpoloId)
                    </dt>
                    <dd>
                        @(Html.Kendo().ComboBoxFor(p => p.HeadOfOpoloId).ValuePrimitive(true)
                                .DataValueField("Id").DataTextField("Name")
                                .DataSource(source => source.Read("ListEmployeIc", "Reference")))
                    </dd>
                    <br />

                    <dt>
                        @Html.DisplayNameFor(model => model.DirectorRcId)
                    </dt>
                    <dd>
                        @(Html.Kendo().ComboBoxFor(p => p.DirectorRcId).ValuePrimitive(true)
                                .DataValueField("Id").DataTextField("Name")
                                .DataSource(source => source.Read("ListEmployeIc", "Reference")))
                    </dd>
                    <br />
                </dl>
            </fieldset>
        </td>
    </tr>
</table>


